<!--components/srarch-bar/srarch-bar.wxml-->
<view style="box-sizing: border-box;	width: 100%;height: {{height}};padding: 16rpx 26rpx;background-color: rgba(255, 255, 255, 1);z-index: 997;-webkit-transition: all .5s;transition: all .5s;">
    <view class="search-c">
    
    <icon class="" type="search" size="16"></icon>
      <view class="search-input search-input-p">
        <input class="search-input-p-c"  placeholder="{{placeholder}}"  bindinput="bindinput"  value="{{searchKey}}"  bindconfirm="bindconfirm" ></input>
      </view>

      <icon type="clear" size="16"  wx:if="{{showClear}}"  bindtap="clear"  >    </icon>
    </view>
  </view>
