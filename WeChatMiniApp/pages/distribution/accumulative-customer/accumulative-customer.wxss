/* pages/distribution/accumulative-customer/accumulative-customer.wxss */

.view-main {
  display: flex;
  flex-direction: column;
}


/* Top */

.swiper-tab {
  width: 100%;
  height: 10vh;
  text-align: center;
  line-height: 100rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 45%;
  color: #777;
}



/* Swiper */

.swiper-parent {
  height: 90vh;
  margin: 16rpx;
  background-color: #F2F6FF;
  padding: 36rpx;
  border-radius: 12rpx;
}

.swiper-scroll-list {
  height: 100%;
}

.list-item {
  display: flex;
  flex-direction: row;
  height: auto;
  margin-bottom: 32rpx;
  align-items: center;
}

.img-item {
  width: 72rpx;
  height: 72rpx;
  background-color: #9D97BB;
  border-radius: 100%;
}

.view-item-right {
  width: 75%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.view-item-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.view-item-bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 16rpx;
  justify-content: space-around;
}

