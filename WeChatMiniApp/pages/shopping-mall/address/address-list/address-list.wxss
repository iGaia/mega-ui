/*地址管理*/


.address {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  margin-top: 1px;
  padding: 30rpx;
  margin: 30rpx 0;
}

.address-icon {
  width: 100rpx;
}

.address-detail {
  width: 590rpx;
}

.address-name-phone {
  margin-bottom: 20rpx;
 
  font-weight: 900;
}

.address-name{
  margin-right: 20rpx;
}

.address-info {
  margin-bottom: 30rpx;
}

.address-edit {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;

  padding-top: 30rpx;
}

.add-address {
  display: flex;
  align-items: center;
  margin-top: 20px;
  padding: 18rpx;
  background-color: #fff;
  font-weight: 900;
}

.add-address-icon {
  height: 20px;
  width: 20px;
}
